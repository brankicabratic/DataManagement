<local:FieldControl x:Class="DataManagement.Controls.ItemsListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataManagement.Controls"
             xmlns:properties="clr-namespace:DataManagement.Properties"
			 mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Name="FieldName" Width="{Binding Source={x:Static properties:Settings.Default}, Path=LabelSize}"/>
			<Button Name="ButtonAdd" Content="+" Click="ButtonAdd_Click" Width="21" Height="20"></Button>
		</StackPanel>
		<StackPanel Name="ItemsContainer">
			
		</StackPanel>
	</StackPanel>
</local:FieldControl>
